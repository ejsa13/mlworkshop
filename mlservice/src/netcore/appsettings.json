{
    "DriftDetectorUrl": "https://localhost:6001/weatherforecast",
    "OutlierDetectorUrl": "https://localhost:6001/weatherforecast",
    "Kafka":{
      "BootstrapServers": "localhost:9092",
      "GroupId": "mltaskmanager",
      "AutoOffsetReset": "earliest",
      "Topic": "mlworkshop"
    },
    "Serilog": {
      "Using":  [ "Serilog.Sinks.Console" ],
      "MinimumLevel": "Debug",
      "WriteTo": [
        { "Name": "Console", 
          "Args":{
            "expression": "(@Level = 'Error' or @Level = 'Debug')"
          }
        },
        { "Name": "Elasticsearch",
          "Args":{
            "expression": "(@Level = 'Error' or @Level = 'Information')",
            "nodeUris": "http://localhost:9200",
            "indexFormat": "custom-index-{0:yyyy.MM}",
            "templateName": "myCustomTemplate",
            "autoRegisterTemplate": true,
            "autoRegisterTemplateVersion": "ESv2",
            "overwriteTemplate": false,
            "registerTemplateFailure": "IndexAnyway",
            "deadLetterIndexName": "deadletter-{0:yyyy.MM}"
          } 
        }
      ]
    }
  }